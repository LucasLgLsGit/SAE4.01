{% extends '_template/base.html.twig' %}

{% block css %}
<link rel="stylesheet" href="/assets/css/event.css">
{% endblock %}

{% block body %}
<div class="event-container py-5">
	<h2 class="text-center fw-bold">{{ event.getTitreEvent() }}</h2>
	<p class="text-center text-muted">{{ event.getDateDebut()|date("d F Y à H:i") }} - {{ event.getAdresse() }}</p>
	<div class="event-description mx-auto" style="max-width: 800px;">
		<p>{{ event.getDescription() }}</p>
	</div>
	{% if event.getPrix() > 0 %}
		<p class="text-center fw-bold">Prix : {{ event.getPrix()|number_format(2, ',', ' ') }} €</p>
	{% else %}
		<p class="text-center fw-bold">Cet événement est gratuit.</p>
	{% endif %}
</div>
{% endblock %}