<!-- Pour g√©rer le Popover, inclure le script JS de Bootstrap -->
<script>
	// Activer le popover au chargement de la page avec html activ√©
	document.addEventListener('DOMContentLoaded', function () {
		const popoverTriggerList = document.querySelectorAll('[data-bs-toggle="popover"]');

		// Parcourir tous les √©l√©ments qui ont le data-bs-toggle="popover"
		[...popoverTriggerList].forEach(popoverTriggerEl => {
			// Initialiser le popover pour chaque √©l√©ment et activer l'option html: true
			new bootstrap.Popover(popoverTriggerEl, {
				html: true  // Permet l'interpr√©tation du HTML dans le contenu du popover
			});
		});
	});


	document.addEventListener("DOMContentLoaded", () => {
		const toggleButton = document.getElementById("theme-toggle");
		const currentTheme = localStorage.getItem("theme");
	
		if (currentTheme) {
			document.documentElement.setAttribute("data-theme", currentTheme);
			if (currentTheme === "dark") {
				toggleButton.textContent = "‚òÄÔ∏è";
			}
		}
	
		toggleButton.addEventListener("click", () => {
			let theme = document.documentElement.getAttribute("data-theme");
			if (theme === "dark") {
				document.documentElement.setAttribute("data-theme", "light");
				localStorage.setItem("theme", "light");
				toggleButton.textContent = "üåô";
			} else {
				document.documentElement.setAttribute("data-theme", "dark");
				localStorage.setItem("theme", "dark");
				toggleButton.textContent = "‚òÄÔ∏è";
			}
		});
	});
</script>

