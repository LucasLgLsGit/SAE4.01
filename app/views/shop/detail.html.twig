{% extends './_template/base.html.twig' %}

{% block css %}
<link rel="stylesheet" href="/assets/css/shop.css">
<link rel="stylesheet" href="/assets/css/details.css">
<style>
    .custom-hr { border: 2px solid #000000; margin: 1.5rem 0; }
    .commande-title { margin-bottom: 1rem; font-weight: bold; }
    .total-commande { margin-top: 0.5rem; font-weight: bold; }
    .miniature-image { cursor: pointer; width: 60px; height: 60px; object-fit: cover; }
    .detail-container .card { border: none; }
</style>
{% endblock %}

{% block body %}
<div class="shop-container">
    <div class="container mt-4">
        <h1 class="mb-4 text-center">{{ title }}</h1>
        {% for numero_commande, items in commandesParNumero %}
            {% set totalCommande = 0 %}
            <div class="mb-5 detail-container">
                <h3 class="commande-title">Commande n°{{ numero_commande }}</h3>
                <div class="row">
                    {% for item in items %}
                        {% set commande = item.commande %}
                        {% set produit = item.produit %}
                        {% set images = item.images %}
                        {% set totalCommande = totalCommande + (commande.quantite * produit.prix) %}
                        <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                            <div class="card h-100">
                                <div class="row g-0">
                                    <div class="col-md-6">
                                        <div class="d-flex justify-content-center align-items-center" style="height: 200px; background-color: #f8f9fa;">
                                            {% if images|length > 0 %}
                                                <img src="/assets/images/products/{{ images[0] }}" alt="{{ produit.titre_produit }}" class="img-fluid main-image" style="max-height: 100%; max-width: 100%;">
                                            {% else %}
                                                <span>Image non disponible</span>
                                            {% endif %}
                                        </div>
                                        {% if images|length > 1 %}
                                            <div class="d-flex justify-content-center mt-3">
                                                {% for image in images %}
                                                    <img src="/assets/images/products/{{ image }}" alt="{{ produit.titre_produit }}" class="img-thumbnail me-2 miniature-image" style="width: 60px; height: 60px; object-fit: cover;">
                                                {% endfor %}
                                            </div>
                                        {% endif %}
                                    </div>
                                    <div class="col-md-6">
                                        <div class="card-body text-center">
                                            <h5 class="card-title mb-2">{{ produit.titre_produit }}</h5>
                                            <p class="text-muted">{{ produit.date_produit|date('Y') }}</p>
                                            <p class="card-text text-muted">Quantité : {{ commande.quantite }}</p>
                                            {% if isAdherent is defined and isAdherent %}
                                                {% set prixReduit = produit.prix * 0.9 %}
                                                <p class="card-text font-weight-bold price" style="font-size: 1.2rem;">
                                                    <span class="text-muted text-decoration-line-through">{{ produit.prix }} €</span>
                                                    <span class="text-success">{{ prixReduit|round(2) }} €</span>
                                                    <small class="text-success">(-10% adhérent)</small>
                                                </p>
                                            {% else %}
                                                <p class="card-text font-weight-bold price" style="font-size: 1.2rem;">{{ produit.prix }} €</p>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <h4 class="text-end total-commande">Total : {{ totalCommande|round(2) }} €</h4>
            </div>
            <div class="col-md-6">
                <h1 class="mb-2">{{ produit.titre_produit }}</h1>
                <p class="text-muted">{{ produit.date_produit|date('Y') }}</p>
                <p>{{ produit.description_produit }}</p>
                <div class="mb-3">
                    {% if produit.reduction | default(0) %}
                    <span class="text-danger fw-bold" style="font-size: 1.5rem;">-{{ produit.reduction }}%</span>
                    <span class="text-decoration-line-through text-muted">{{ produit.prix_original | default(produit.prix) }} €</span>
                    {% endif %}
                    {% if isAdherent is defined and isAdherent %}
                    {% set prixReduitAdherent = produit.prix * 0.9 %}
                    <p class="fw-bold" style="font-size: 1.5rem;">
                        <span class="text-muted text-decoration-line-through">{{ produit.prix }} €</span>
                        <span class="text-success">{{ prixReduitAdherent | number_format(2, '.', ',') }} €</span>
                        <small class="text-success">(-10% adhérent)</small>
                    </p>
                    {% else %}
                    <span class="fw-bold" style="font-size: 1.5rem;">{{ produit.prix }} €</span>
                    {% endif %}
                </div>
                <form id="add-to-cart-form">
                    <input type="hidden" name="titre_produit" id="selectedProductTitle" value="{{ produit.titre_produit }}">
                    <input type="hidden" name="id_produit" id="selectedProductId" value="">
                    <div class="mb-3">
                        <p><strong>Taille :</strong></p>
                        <div>
                            {% for taille in tailles %}
                            <input type="radio" name="selected_taille" id="taille_{{ taille }}" value="{{ taille }}" class="d-none" required>
                            <label for="taille_{{ taille }}" class="btn btn-outline-secondary btn-sm me-2">{{ taille }}</label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="mb-3">
                        <p><strong>Couleur :</strong></p>
                        <div>
                            {% for couleur in couleurs %}
                            <input type="radio" name="selected_couleur" id="couleur_{{ couleur }}" value="{{ couleur }}" class="d-none" required>
                            <label for="couleur_{{ couleur }}" class="btn btn-couleur me-2" style="background-color: {{ couleur }};"></label>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="quantite" class="form-label">Quantité :</label>
                        <select id="quantite" name="quantite" class="form-select" required>
                            {% for i in 1..10 %}
                            <option value="{{ i }}">{{ i }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    {% if isLoggedIn %}
                        <button type="button" id="add-to-cart-button" class="btn btn-ajouter-panier btn-primary w-100">Ajouter au panier</button>
                    {% else %}
                        <a href="/login.php" class="btn btn-ajouter-panier w-100">Se connecter</a>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function () {
    const cards = document.querySelectorAll('.card');
    cards.forEach(card => {
        const mainImage = card.querySelector('.main-image');
        const thumbnails = card.querySelectorAll('.miniature-image');
        thumbnails.forEach(thumbnail => {
            thumbnail.addEventListener('click', function () {
                mainImage.src = this.src;
            });
        });
    });
});
</script>
{% endblock %}